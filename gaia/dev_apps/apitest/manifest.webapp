{
	"name": "API Test",
	"version": "1.3",
	"type": "certified",
	"description": "Create/Pick a photo and put various effects on it and Share it!",
	"developer": {
        "name": "Adam Balogh",
        "url": "http://code-chronicle.blogspot.com"
    },
	"launch_path": "/index.html",
	"icons": {
        "16": "/img/icons/icon-16.png",
		"32": "/img/icons/icon-32.png",
        "48": "/img/icons/icon-48.png",
		"60": "/img/icons/icon-60.png",
		"90": "/img/icons/icon-90.png",
		"120": "/img/icons/icon-120.png",
        "128": "/img/icons/icon-128.png",
		"256": "/img/icons/icon-256.png"
    },
	"default_locale": "en",
	"orientation": ["portrait"],
	"permissions": {
		"device-storage:pictures": {
			"access": "createonly",
			"description" : "To save image"
		},
		"systemXHR": {
			"description" : "To Imgur upload"
		},
      "contacts":{ "access": "readwrite" }
    },

  "activities": {
    "view": {
      "href": "./gallery.html",
      "disposition": "inline",
      "filters": {
        "type": ["rdbphoto"]
      },
      "returnValue": false
    }
  },

  "connections": {
    "moziac": {
      "handler_path": "/index.html",
      "description": "test postmessage",
      "rules": {}
    }
  }
}
